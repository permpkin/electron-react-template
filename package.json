{
  "name": "electron-react-template",
  "description": "Electron React Template",
  "author": "Permpkin",
  "version": "1.0.0",
  "homepage": "./",
  "main": "public/electron.js",
  "repository": {
    "url": "https://github.com/permpkin/electron-react-template"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "5.0.1"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "postinstall": "electron-builder install-app-deps",
    "dev": "run-p dev:*",
    "dev:electron": "electron .",
    "dev:start": "BROWSER=none react-scripts start",
    "dist": "run-s dist:*",
    "dist:react": "run-s build",
    "dist:electron": "electron-builder -mwl"
  },
  "eslintConfig": {
    "extends": [
      "react-app"
    ]
  },
  "build": {
    "appId": "your.app.id",
    "productName": "Electron React Template",
    "publish": [
      {
        "provider": "github",
        "owner": "permpkin",
        "repo": "electron-react-template"
      }
    ]
  },
  "config": {
    "forge": {
      "publishers": [
        {
          "name": "@electron-forge/publisher-github",
          "config": {
            "repository": {
              "owner": "permpkin",
              "name": "electron-react-template"
            }
          }
        }
      ]
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@electron-forge/publisher-github": "^6.0.0-beta.65",
    "electron": "^19.0.10",
    "electron-builder": "^23.1.0",
    "electron-is-dev": "^2.0.0",
    "npm-run-all": "^4.1.5",
    "wait-on": "^6.0.1"
  }
}
